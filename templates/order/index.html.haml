- use utf8;
- my $_id = 'order';
- layout 'default',
-   page_id     => $_id,
-   breadcrumbs => [ { text => meta_text($_id) } ],
-   jses  => [
-     '/lib/reconnectingWebsocket/reconnecting-websocket.js',
-   ];
- title meta_text($_id);

- use DateTime;
- my $list_name = param('status') || '';
- my $user = current_user;

#vbank-modal.modal{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4.modal-title 가상계좌
      .modal-body
        %p
          아래 금액으로 전용 가상계좌를 발송하시겠습니까?
        %input{:name => 'amount', :type => 'text'}
        %input{:name => 'order_id', :type => 'hidden'}
      .modal-footer
        %button.btn.btn-default.btn-sm{"data-dismiss" => "modal", :type => "button"} 닫기
        %button.btn.btn-success.btn-sm{:type => "button"} SMS 를 보냅니다

