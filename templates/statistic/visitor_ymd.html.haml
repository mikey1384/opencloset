      - for ( my $i = 0 ; $i <  @{ $count->{day} } ; $i++ ) {
      -   my $label = $count->{day}[$i]{label};
      -   my $ymd   = $dt->ymd;
        %tr
          %td
            - if ( $label =~ m/^$ymd/ ) {
              %span.date
                %a{ :href => "#{ url_for( '/order' )->query( 'booking_ymd' => $label ) }" }= $label
            - }
            - else {
              %span
                %a{ :href => "#{ url_for( '/order' )->query( 'booking_ymd' => $label ) }" }= $label
            - }
