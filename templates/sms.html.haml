- use utf8;
- my $_id = 'sms';
- layout 'default',
-   page_id => $_id,
-   jses    => [
-     '/lib/jquery/js/jquery.mask.min.js',
-   ],
-   ;
- title meta_text($_id);

.row
  .hr.hr12.dotted
  .clearfix
    .grid2
      %span.bigger-175.blue= commify( $balance->{cash} )
      %br
      캐쉬
    .grid2
      %span.bigger-175.blue= commify( $balance->{point} )
      %br
      포인트
  .hr.hr16.dotted

.space-6

.row
  .col-xs-12
    %form.form-horizontal{ :role => 'form' }
      .form-group
        %label.col-sm-3.control-label.no-padding-right{ :for => 'to' } 받는 사람
        .col-sm-9
          %input.col-xs-10.col-sm-5{ :name => "to", :type => "text", :placeholder => "휴대 전화 번호 / 주문서 번호(#1234)", :value => "#{$to}" }
      .form-group
        %label.col-sm-3.control-label.no-padding-right{ :for => 'from' } 발신번호
        .col-sm-9
          %input.col-xs-10.col-sm-5{ :name => "from", :type => 'text', :value => "07043257521" }
      .form-group
        %label.col-sm-3.control-label.no-padding-right{ :for => 'macro' } 매크로
        .col-sm-9
          %select.col-xs-10.col-sm-5{ :name => "macro", 'data-placeholder' => '전송할 메시지의 종류를 선택하세요.' }
            %option{:value => '', :data-from => "07043257521"} 직접입력
            - while (my $macro = $macros->next) {
              %option{:value => "#{$macro->text}", :data-from => "#{$macro->from}"}= $macro->name
            - }
      .form-group
        %label.col-sm-3.control-label.no-padding-right{ :for => 'msg' }
          메시지
          %br
          %span
            %span.msg-screen-width= '0'
            = ' / 80'
        .col-sm-9
          %textarea.col-xs-10.col-sm-8{ :name => "msg", :placeholder => "한글 기준 40자가 넘지 않을 경우 SMS로, 넘을 경우 LMS로 전송합니다.", :rows => "25" }= $msg
      .form-actions.clearfix
        .col-md-offset-3.col-md-9
          %button.btn.btn-info#btn-sms-send{ :type => 'button' }
            %i.ace-icon.icon-check.bigger-110
            전송
          %button.btn.btn-danger{ :type => 'reset' }
            %i.ace-icon.icon-undo.bigger-110
            다시 쓰기
