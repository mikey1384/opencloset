- use utf8;
- my $_id = 'measurement';
- layout 'default', page_id => $_id;
- title meta_text($_id);

%form.form-inline{:method => 'GET'}
  .input-group
    %input{:type => 'hidden', :name => 'gender', :value => "#{$gender}"}
    %input#query.form-control{ :name => 'q', :type => 'text', :placeholder => '키 몸무게' :value => "#{$q}" }
    %span.input-group-btn
      %a.btn.btn-info.btn-sm{:href => "#{url_with->query([gender => 'male'])}", :class => "#{$gender eq 'male' ? 'active' : ''}"} 남자
      %a.btn.btn-danger.btn-sm{:href => "#{url_with->query([gender => 'female'])}", :class => "#{$gender eq 'female' ? 'active' : ''}"} 여자
      %button#btn-search.btn.btn-sm.btn-default{ :type => 'button' }
        %i.icon-search.bigger-110
        검색

- if ($height && $weight) {
  %table.table.table-condensed.table-bordered
    %thead
      %tr
        %th
          %i{:class => "icon-#{$gender} #{$gender}"}
          = $local->cnt
          건의 평균
        - for my $h ($height - 1 .. $height + 1) {
          %th= $h
        - }
    %tbody
      - for my $w ($weight - 1 .. $weight + 1) {
        %tr
          %th= $w
          - for my $h ($height - 1 .. $height + 1) {
            - if ($height == $h && $weight == $w) {
              %td.success
                %samp= $size->{$h}{$w}
            - } else {
              %td
                %samp= $size->{$h}{$w}
            - }
          - }
      - }
  %hr
  %table.table.table-bordered.table-condensed
    %thead
      %tr
        %th= "$height / $weight"
        %th 중동
        %th 윗배
        %th 가슴
        %th 팔
        %th 허벅지
        %th 허리
        %th 다리
        %th 발
    %tbody
      %tr
        %th opencloset
        %td= $local->belly
        %td= $local->topbelly
        %td= $local->bust
        %td= $local->arm
        %td= $local->thigh
        %td= $local->waist
        %td= $local->leg
        %td= $local->foot
      %tr
        %th Bodykit
        %td= $bodykit->belly
        %td= $bodykit->topbelly
        %td= $bodykit->bust
        %td= $bodykit->arm
        %td= $bodykit->thigh
        %td= $bodykit->waist
        %td= $bodykit->leg
        %td= $bodykit->foot
- }
